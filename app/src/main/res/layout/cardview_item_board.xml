<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/card_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_spacing_default_half"
    android:layout_marginRight="@dimen/card_spacing_default_half"
    android:layout_marginTop="@dimen/text_spacing_default"
    app:cardCornerRadius="@dimen/card_radius_default"
    app:elevation="@dimen/card_elevation_static"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/framelayout_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/drawable_default_selector"
            android:transitionName="card_image">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_card_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:maxHeight="2000dp"
                android:maxWidth="2000dp"
                fresco:progressBarAutoRotateInterval="1000"
                tools:layout_height="100dp"
                />

            <RelativeLayout
                android:id="@+id/relation_board_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="@color/grey_a700"
                android:padding="@dimen/text_margin">

                <TextView
                    android:id="@+id/tv_board_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/text_spacing_default"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_context_size_16sp"
                    tools:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_board_gather"
                    style="@style/card_text_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/tv_board_title"
                    tools:text="采集数量" />

                <TextView
                    style="@style/card_text_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_board_attention"
                    android:layout_below="@id/tv_board_title"
                    android:layout_marginLeft="@dimen/text_spacing_default"
                    android:layout_toRightOf="@id/tv_board_gather"
                    tools:text="关注数量" />
            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linear_operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_default_selector"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待修改"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>